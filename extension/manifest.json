{
  "manifest_version": 3,
  "name": "JobBuddy - Auto Saver",
  "version": "1.0",
  "description": "One-click save jobs from Indeed/LinkedIn/Glassdoor to JobBuddy",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "*://*.indeed.com/*",
    "*://*.linkedin.com/*",
    "*://*.glassdoor.com/*",
    "http://localhost:8080/*", 
    "https://jobbuddy-u6n3.onrender.com/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.indeed.com/*",
        "*://*.glassdoor.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}