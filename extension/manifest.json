{
  "manifest_version": 3,
  "name": "JobBuddy - Auto Saver",
  "version": "1.0",
  "description": "One-click save jobs from Indeed/LinkedIn/Glassdoor to JobBuddy",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
    // "default_icon": {
    //   "16": "icon.png", 
    //   "48": "icon.png",
    //   "128": "icon.png"
    // }
  },
  "host_permissions": [
    "https://www.indeed.com/*",
    "https://www.linkedin.com/*",
    "http://localhost:8080/*", 
    "https://jobbuddy-u6n3.onrender.com/*" 
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.indeed.com/*",
        "*://*.glassdoor.com/*"
      ],
      "js": ["content.js"]
    }
  ]

}